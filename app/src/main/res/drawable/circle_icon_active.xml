<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer green circle (border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF00FF00" /> <!-- Green color -->
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <!-- Inner white circle (background for the image) -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <size
                android:width="72dp"
                android:height="72dp" />
        </shape>
    </item>
</layer-list>